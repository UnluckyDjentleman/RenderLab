<div class="col-md-8 offset-md-2" style="margin-top: 20px;">
    <div style="height:450px; overflow-y: scroll; border: 1px solid black;">
        {{#each contacts}}
            <div class="card bg-light mb-3" data-key="{{id}}" style="margin: 20px;" onclick="window.location.href='/update/{{id}}'">
                <div class="card-header">
                    <h5>{{name}}</h5>
                </div>
                <div class="card-body">
                    {{phone}}
                </div>
            </div>
        {{/each}}
    </div>
    <form style="margin-top:20px;"  class="form" data-key="{{thisContact.id}}">
        <input type="input" class="form-control" placeholder="Enter name" id="name" name="name" value="{{thisContact.name}}">
        <input type="input" class="form-control" id="phone" name="phone" placeholder="Enter telephone" value="{{thisContact.phone}}">
        <div style="display: flex; justify-content: center;">
            <button style="width:20%; margin:1.5%" class="btn btn-warning" onclick="updateContact()">Update</button>
            <button style="width:20%; margin:1.5%" class="btn btn-danger" onclick="deleteContact()">Delete</button>
            {{{dismiss}}}
        </div>
    </form>
</div>